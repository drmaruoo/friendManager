@model IEnumerable<friendManager.Models.Friend>

@{
    ViewData["Title"] = "Friendlist";
}

<h2>Friendlist</h2>

<p>
    <a asp-action="Create">Add new friend</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParm})
            </th>
            <th>
                @Html.ActionLink("First meet date", "Index", new { sortOrder = ViewBag.DateSortParm })
            </th>
            <th>
                Biggest secret
            </th>
            <th>
                 @Html.ActionLink("Likeability", "Index", new { sortOrder = ViewBag.LikeSortParm })
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstMeetDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BiggestSecret)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Likeability)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
